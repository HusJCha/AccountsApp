<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.husain.accountsapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreatePasswordActivity"
            android:theme="@style/Lockscreen" />
        <activity
            android:name=".CheckPasswordActivity"
            android:theme="@style/Lockscreen" />
        <activity
            android:name=".SplashActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"
            android:theme="@style/Lockscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GetAllRecordActivity" />
        <!--<activity android:name=".getAllRecordAdapterActivity" />-->
        <activity android:name=".ShowActivity" android:label="AccountsApp" android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>